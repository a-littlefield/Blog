<h1 style="margin: 20px 10px">Recent posts</h1>

<% if !@current_user %>
  <p>Sign in to post!</p>
<% else %>
  <p style="margin-left: 10px;">
    <%= link_to "Create a new post!", new_post_path %>
  </p>
<% end %>




<table class="table table-hover table-striped">
  <tbody> 
  <% @posts.each do |post| %>                                   
    <tr>
      <td>
          <h5 class="postTitle"><%= link_to post.title, post %></h5> <%= post.content %> <p class="posts-user">by: <%= post.user.full_name %> <%= time_ago_in_words(post.created_at) %> ago
          <%= link_to "Comment", post, id: "comment" %></p>
      </td>
    </tr>
   <% end %>
  </tbody>
</table>


